<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".Admin.Fragment.Admin_FinanceFragment">

    <Button
        android:id="@+id/btnMonthly"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_below="@+id/recyclerViewer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="#FC6E51"
        android:fontFamily="@string/font_family_condensed"
        android:padding="10dp"
        android:text="Monthly"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Finance"
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@string/font_family_condensed" />
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/line" />
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewer"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="1dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <Button
        android:id="@+id/btnWeekly"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_below="@+id/recyclerViewer"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_toStartOf="@+id/btnMonthly"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="#ffca5f"
        android:fontFamily="@string/font_family_condensed"
        android:padding="10dp"
        android:text="Weekly"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDaily"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_below="@+id/recyclerViewer"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_toStartOf="@+id/btnWeekly"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/pastel_orange"
        android:fontFamily="@string/font_family_condensed"
        android:padding="10dp"
        android:text="Daily"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/settings"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="true" />

    <FrameLayout
        android:id="@+id/fl_logout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_rounded1"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGOUT"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="@string/font_family_condensed"/>
    </FrameLayout>

</RelativeLayout>