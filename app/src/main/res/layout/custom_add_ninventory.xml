<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/sky"
        app:layout_constraintTop_toTopOf="parent" >

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/paw_prints" />
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/paw_prints" />
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="240dp"
            android:background="@drawable/paw_prints" />
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="360dp"
            android:background="@drawable/paw_prints" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/dialog_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nCapital"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Capital"
        android:textSize="13sp"
        android:inputType="number"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="@+id/nQuantity"
        app:layout_constraintStart_toStartOf="@+id/nQuantity"
        app:layout_constraintTop_toBottomOf="@+id/nQuantity" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nCircleImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/circle_outline"
        android:backgroundTint="@color/sky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/nName"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Name"
        android:textSize="13sp"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nQRcode" />

    <EditText
        android:id="@+id/nQRcode"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="QR code"
        android:textSize="13sp"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="@+id/nName"
        app:layout_constraintStart_toStartOf="@+id/nName"
        app:layout_constraintTop_toBottomOf="@+id/aSubcategory" />

    <EditText
        android:id="@+id/nQuantity"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Quantity"
        android:textSize="13sp"
        android:inputType="number"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nName" />

    <EditText
        android:id="@+id/nPrice"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Price"
        android:textSize="13sp"
        android:inputType="number"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nCapital" />

    <EditText
        android:id="@+id/nCriticalValue"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/white"
        android:inputType="number"
        android:ems="10"
        android:hint="Critical Value"
        android:textSize="13sp"
        android:textColor="@color/dim_gray"
        android:textColorHint="@color/gray"
        android:paddingStart="10dp"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nPrice" />

    <Button
        android:id="@+id/nCreate"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/green"
        android:text="Create"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spStatus"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/nCancel"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rounded"
        android:backgroundTint="@color/imperial"
        android:text="Cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nCreate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spStatus"
        app:layout_constraintVertical_bias="0.194" />

    <TextView
        android:id="@+id/nCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/aSubcategory"
        app:layout_constraintStart_toStartOf="@+id/nQRcode"
        app:layout_constraintTop_toTopOf="@+id/spCategory" />

    <TextView
        android:id="@+id/nStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Status"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/nCancel"
        app:layout_constraintStart_toStartOf="@+id/nCriticalValue"
        app:layout_constraintTop_toBottomOf="@+id/nCriticalValue" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contextClickable="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="@+id/aSubcategory"
        app:layout_constraintTop_toBottomOf="@+id/nCircleImageView" />

    <Spinner
        android:id="@+id/spStatus"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:contextClickable="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/nCriticalValue"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/nStatus"
        app:layout_constraintTop_toBottomOf="@+id/nCriticalValue" />

    <AutoCompleteTextView
        android:id="@+id/aSubcategory"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:completionHint="Select subcategory"
        android:completionThreshold="1"
        android:hint="Subcategory"
        android:textSize="13sp"
        android:textColorHint="@color/gray2"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:fontFamily="@string/font_family_light"
        app:layout_constraintEnd_toEndOf="@+id/nQRcode"
        app:layout_constraintStart_toStartOf="@+id/nCategory"
        app:layout_constraintTop_toBottomOf="@+id/spCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>